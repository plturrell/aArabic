# =============================================================================
# serviceCore Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# All third-party services have been removed in favor of SAP BTP
# =============================================================================

# -----------------------------------------------------------------------------
# SAP HANA Cloud Configuration (OData)
# -----------------------------------------------------------------------------
HANA_ODATA_URL=https://your-hana-instance.hanacloud.ondemand.com/odata/v4
HANA_USERNAME=your_username
HANA_PASSWORD=your_password

# Optional: For SQL direct access
HANA_SQL_HOST=your-hana-instance.hanacloud.ondemand.com
HANA_SQL_PORT=443
HANA_SQL_DATABASE=your_database

# -----------------------------------------------------------------------------
# SAP Object Store Configuration
# -----------------------------------------------------------------------------
OBJECT_STORE_URL=https://your-object-store.s3.amazonaws.com
OBJECT_STORE_BUCKET=servicecore-storage
OBJECT_STORE_ACCESS_KEY=your_access_key
OBJECT_STORE_SECRET_KEY=your_secret_key
OBJECT_STORE_REGION=us-east-1

# -----------------------------------------------------------------------------
# Service Registry Configuration
# -----------------------------------------------------------------------------
SERVICE_REGISTRY_BIND=0.0.0.0:8100
SERVICE_REGISTRY_URL=http://service-registry:8100
SERVICE_REGISTRY_CONFIG=config/service_registry.json
SERVICE_REGISTRY_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# nWebServe Configuration
# -----------------------------------------------------------------------------
WEBSERVE_PORT=8080
WEBSERVE_HOST=0.0.0.0
WEBSERVE_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# nOpenaiServer Configuration
# -----------------------------------------------------------------------------
OPENAI_PORT=11434
OPENAI_HOST=0.0.0.0
OPENAI_MODEL_PATH=/app/models
OPENAI_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# nExtract Configuration
# -----------------------------------------------------------------------------
EXTRACT_PORT=8200
EXTRACT_HOST=0.0.0.0
EXTRACT_TEMP_DIR=/app/temp
EXTRACT_CACHE_DIR=/app/cache
EXTRACT_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# nAudioLab Configuration
# -----------------------------------------------------------------------------
AUDIOLAB_PORT=8300
AUDIOLAB_HOST=0.0.0.0
AUDIOLAB_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# nCode Configuration
# -----------------------------------------------------------------------------
NCODE_PORT=8400
NCODE_HOST=0.0.0.0
NCODE_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Logging & Telemetry (All to SAP HANA Cloud)
# -----------------------------------------------------------------------------
LOG_TO_HANA=true
METRICS_TO_HANA=true
TRACES_TO_HANA=true
LOG_LEVEL=info

# Logging format
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_SERVICE=true

# -----------------------------------------------------------------------------
# Authentication (Optional - SAP BTP Identity or Custom)
# -----------------------------------------------------------------------------
# AUTH_ENABLED=true
# AUTH_PROVIDER=sap_btp
# AUTH_ISSUER=https://your-tenant.authentication.sap.hana.ondemand.com
# AUTH_CLIENT_ID=your_client_id
# AUTH_CLIENT_SECRET=your_client_secret

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
NETWORK_INTERNAL=false
NETWORK_SUBNET=172.30.0.0/16

# -----------------------------------------------------------------------------
# Development/Debug Settings
# -----------------------------------------------------------------------------
DEBUG=false
ENABLE_PROFILING=false
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# -----------------------------------------------------------------------------
# Docker Build Cloud (GitHub Actions)
# -----------------------------------------------------------------------------
# DOCKER_BUILD_CLOUD_ENDPOINT=cloud://your-org/your-builder
