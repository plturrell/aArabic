# nOpenaiServer Dockerfile (Zig/Mojo LLM Inference Server)
FROM debian:bookworm-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    curl \
    xz-utils \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Zig
WORKDIR /tmp
RUN curl -L https://ziglang.org/download/0.13.0/zig-linux-x86_64-0.13.0.tar.xz -o zig.tar.xz \
    && tar -xf zig.tar.xz \
    && mv zig-linux-x86_64-0.13.0 /usr/local/zig \
    && ln -s /usr/local/zig/zig /usr/local/bin/zig

# Install Mojo (via magic CLI)
RUN curl -ssL https://magic.modular.com/install.sh | bash
ENV PATH="/root/.modular/bin:/root/.magic/bin:${PATH}"

WORKDIR /app

# Copy source
COPY src/serviceCore/nOpenaiServer/ ./

# Build Zig components
RUN zig build -Doptimize=ReleaseFast

# Build Mojo components (if applicable)
RUN if [ -d "mojo" ]; then \
    cd mojo && mojo build main.mojo -o ../zig-out/bin/nopenaiserver-mojo; \
    fi

# Runtime image
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -u 1000 appuser
WORKDIR /app

# Copy binaries
COPY --from=builder /app/zig-out/bin/* /app/

# Create models directory
RUN mkdir -p /app/models && chown -R appuser:appuser /app

USER appuser

EXPOSE 11434

HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=30s \
  CMD curl -sf http://localhost:11434/health || exit 1

CMD ["./nopenaiserver"]
