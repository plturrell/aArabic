{
  "database": {
    "host": "localhost",
    "port": 30015,
    "database": "NOPENAI_DB",
    "user": "NUCLEUS_APP",
    "password": "${HANA_PASSWORD}",
    "schema": "NUCLEUS"
  },
  "connection_pool": {
    "min_connections": 5,
    "max_connections": 10,
    "idle_timeout_ms": 30000,
    "connection_timeout_ms": 5000,
    "health_check_interval_ms": 60000
  },
  "retry_policy": {
    "max_attempts": 3,
    "initial_delay_ms": 100,
    "max_delay_ms": 5000,
    "backoff_multiplier": 2.0
  },
  "query_settings": {
    "default_timeout_ms": 10000,
    "batch_size": 100,
    "prepared_statement_cache_size": 50
  },
  "monitoring": {
    "enable_metrics": true,
    "enable_slow_query_log": true,
    "slow_query_threshold_ms": 1000,
    "enable_connection_tracing": false
  }
}
