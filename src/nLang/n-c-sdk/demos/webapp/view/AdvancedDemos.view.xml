oved<mvc:View
    controllerName="galaxy.sim.controller.AdvancedDemos"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="100%">

    <Page
        title="Advanced Demos"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="advancedDemosPage">

        <content>
            <VBox class="sapUiMediumMargin">
                <Title text="Advanced Zig Demos" level="H2" class="sapUiSmallMarginBottom" />
                <Text text="Complex examples with multi-threading, monitoring, and advanced features" class="sapUiMediumMarginBottom" />

                <List
                    headerText="Available Advanced Demos"
                    items="{/demos}">
                    <StandardListItem
                        title="{name}"
                        description="{description}"
                        icon="sap-icon://laptop"
                        type="Navigation"
                        press=".onDemoPress" />
                </List>
            </VBox>
        </content>
    </Page>

</mvc:View>