# HyperShimmy Production Configuration
# Day 59: Production environment settings

# Server Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO

# External Services
QDRANT_URL=http://qdrant:6333
SHIMMY_URL=http://shimmy:8000

# Security
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
CORS_ORIGINS=https://hypershimmy.dev
ENABLE_HTTPS=true
CSP_ENABLED=true

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,doc,docx
UPLOAD_DIR=/app/uploads

# Database
DB_PATH=/app/data/hypershimmy.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600

# Performance
WORKER_THREADS=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
EMBEDDING_CACHE_SIZE=1000

# AI Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
MAX_CONTEXT_LENGTH=4096
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Feature Flags
ENABLE_AUDIO=true
ENABLE_SLIDES=true
ENABLE_MINDMAP=true
ENABLE_YOUTUBE=false

# Deployment
ENVIRONMENT=production
VERSION=1.0.0
BUILD_DATE=2026-01-16
