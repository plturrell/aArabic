<mvc:View
    controllerName="nExtract.webapp.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPage toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Extraction History"/>
                </f:heading>
                <f:actions>
                    <Button icon="sap-icon://add" type="Transparent"/>
                    <Button icon="sap-icon://home" tooltip="Back to Launchpad" press=".onPressHome"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox class="sapUiSmallMargin">
                <SearchField placeholder="Search documents..." search=".onSearch" liveChange=".onSearch" class="sapUiSmallMarginBottom"/>
                <List
                    id="historyList"
                    items="{history>/items}"
                    mode="SingleSelectMaster"
                    selectionChange=".onSelectionChange"
                    class="hypershimmyMasterList">
                    <ObjectListItem
                        title="{history>name}"
                        type="Active"
                        intro="{history>date}"
                        icon="{history>icon}"
                        number="{history>confidence}"
                        numberUnit="%"
                        numberState="{= ${history>confidence} > 90 ? 'Success' : 'Warning'}">
                        <firstStatus>
                            <ObjectStatus text="{history>status}" state="{history>status}"/>
                        </firstStatus>
                    </ObjectListItem>
                </List>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
