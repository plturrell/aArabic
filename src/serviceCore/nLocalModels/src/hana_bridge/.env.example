# HANA Cloud SQL Bridge - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# HANA Connection
# ============================================================================
HANA_HOST=your-instance.hana.prod-us10.hanacloud.ondemand.com
HANA_PORT=443
HANA_USER=DBADMIN
HANA_PASSWORD=your-password
HANA_SCHEMA=NUCLEUS
HANA_SSL_VALIDATE=false

# ============================================================================
# Server Configuration
# ============================================================================
BRIDGE_PORT=3001
BRIDGE_HOST=0.0.0.0
LOG_LEVEL=INFO
NODE_ENV=production

# ============================================================================
# Connection Pool
# ============================================================================
POOL_MIN=2
POOL_MAX=10
POOL_ACQUIRE_TIMEOUT=30000
POOL_IDLE_TIMEOUT=60000

# ============================================================================
# Retry Configuration
# ============================================================================
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=10000
RETRY_FACTOR=2

# ============================================================================
# Circuit Breaker
# ============================================================================
CB_THRESHOLD=5
CB_RESET_TIMEOUT=30000

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# ============================================================================
# Clustering (Node.js built-in)
# ============================================================================
CLUSTER_ENABLED=false
CLUSTER_WORKERS=4

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=*

# ============================================================================
# Docker/Load Balancer
# ============================================================================
LB_PORT=3000

# ============================================================================
# Monitoring
# ============================================================================
GRAFANA_PASSWORD=admin
