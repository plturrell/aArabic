{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mojo",
  "scopeName": "source.mojo",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#decorators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.mojo",
          "match": "#.*$"
        },
        {
          "name": "comment.block.mojo",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.mojo",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mojo",
          "match": "\\b(if|elif|else|for|while|break|continue|return|yield|pass|match|case)\\b"
        },
        {
          "name": "keyword.control.import.mojo",
          "match": "\\b(import|from|as)\\b"
        },
        {
          "name": "keyword.other.mojo",
          "match": "\\b(fn|def|struct|class|trait|var|let|alias|owned|borrowed|inout)\\b"
        },
        {
          "name": "keyword.operator.logical.mojo",
          "match": "\\b(and|or|not|in|is)\\b"
        },
        {
          "name": "storage.modifier.mojo",
          "match": "\\b(pub|mut|static|async|await|unsafe)\\b"
        },
        {
          "name": "keyword.other.special.mojo",
          "match": "\\b(self|Self)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.mojo",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.triple.mojo",
          "begin": "'''",
          "end": "'''",
          "patterns": [
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.double.mojo",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.single.mojo",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "include": "#string-escape" }
          ]
        },
        {
          "name": "string.quoted.other.mojo",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-escape" },
            {
              "name": "meta.embedded.expression.mojo",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "string-escape": {
      "name": "constant.character.escape.mojo",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8}|[0-7]{1,3}|[\\\\'\"abfnrtv])"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.mojo",
          "match": "\\b0[xX][0-9a-fA-F]+(_[0-9a-fA-F]+)*\\b"
        },
        {
          "name": "constant.numeric.octal.mojo",
          "match": "\\b0[oO][0-7]+(_[0-7]+)*\\b"
        },
        {
          "name": "constant.numeric.binary.mojo",
          "match": "\\b0[bB][01]+(_[01]+)*\\b"
        },
        {
          "name": "constant.numeric.float.mojo",
          "match": "\\b[0-9]+(_[0-9]+)*\\.[0-9]+(_[0-9]+)*([eE][+-]?[0-9]+(_[0-9]+)*)?\\b"
        },
        {
          "name": "constant.numeric.float.mojo",
          "match": "\\b[0-9]+(_[0-9]+)*[eE][+-]?[0-9]+(_[0-9]+)*\\b"
        },
        {
          "name": "constant.numeric.integer.mojo",
          "match": "\\b[0-9]+(_[0-9]+)*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.mojo",
          "begin": "\\b(fn|def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "keyword.other.mojo" },
            "2": { "name": "entity.name.function.mojo" }
          },
          "end": "\\)\\s*(->\\s*([a-zA-Z_][a-zA-Z0-9_\\[\\]]*))?(:|\\s*{)",
          "endCaptures": {
            "2": { "name": "entity.name.type.mojo" }
          },
          "patterns": [
            { "include": "#function-parameters" }
          ]
        },
        {
          "name": "meta.function-call.mojo",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.mojo" }
          }
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z_][a-zA-Z0-9_\\[\\]]*)",
          "captures": {
            "1": { "name": "variable.parameter.mojo" },
            "2": { "name": "entity.name.type.mojo" }
          }
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#strings" },
        {
          "include": "#numbers"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.primitive.mojo",
          "match": "\\b(Int|Int8|Int16|Int32|Int64|UInt|UInt8|UInt16|UInt32|UInt64|Float|Float16|Float32|Float64|Bool|String|StringLiteral|SIMD|DType)\\b"
        },
        {
          "name": "meta.struct.mojo",
          "begin": "\\b(struct|class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "1": { "name": "keyword.other.mojo" },
            "2": { "name": "entity.name.type.mojo" }
          },
          "end": ":|{",
          "patterns": [
            {
              "match": "\\[([a-zA-Z_][a-zA-Z0-9_,\\s]*)\\]",
              "captures": {
                "1": { "name": "entity.name.type.parameter.mojo" }
              }
            }
          ]
        },
        {
          "name": "entity.name.type.mojo",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.mojo",
          "match": "\\+|\\-|\\*|\\/|\\/\\/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.comparison.mojo",
          "match": "==|!=|<|>|<=|>="
        },
        {
          "name": "keyword.operator.assignment.mojo",
          "match": "=|\\+=|\\-=|\\*=|\\/=|%=|\\*\\*=|\\/\\/="
        },
        {
          "name": "keyword.operator.bitwise.mojo",
          "match": "&|\\||\\^|~|<<|>>"
        },
        {
          "name": "keyword.operator.logical.mojo",
          "match": "&&|\\|\\||!"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.mojo",
          "match": "\\b(True|False|None)\\b"
        },
        {
          "name": "constant.other.caps.mojo",
          "match": "\\b[A-Z_][A-Z0-9_]+\\b"
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "meta.decorator.mojo",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*",
          "captures": {
            "0": { "name": "entity.name.function.decorator.mojo" }
          }
        }
      ]
    }
  }
}
