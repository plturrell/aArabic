<mvc:View
    controllerName="nCode.webapp.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:code="sap.ui.codeeditor">
    <f:DynamicPage showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{editor>/currentFile/name}"/>
                </f:heading>
                <f:expandedContent>
                    <Label text="{editor>/currentFile/path}"/>
                </f:expandedContent>
                <f:actions>
                    <Button text="Save" type="Emphasized" icon="sap-icon://save"/>
                    <Button icon="sap-icon://action" tooltip="Export"/>
                    <Button icon="sap-icon://full-screen" press=".onFullScreen"/>
                    <Button icon="sap-icon://decline" press=".onCloseDetail"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <HBox gap="1rem">
                    <ObjectStatus title="Size" text="{editor>/currentFile/size}" state="Indication06"/>
                    <ObjectStatus title="Language" text="{editor>/currentFile/language}" state="Information"/>
                    <ObjectStatus title="Last Modified" text="Just now"/>
                </HBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox height="100%">
                <code:CodeEditor
                    value="{editor>/code}"
                    type="{editor>/currentFile/type}"
                    height="600px"
                    editable="true">
                </code:CodeEditor>
            </VBox>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <Button icon="sap-icon://message-popup" text="AI Assistant" type="Transparent"/>
                <ToolbarSpacer/>
                <Text text="Ln 1, Col 1"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
