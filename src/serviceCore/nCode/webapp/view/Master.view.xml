<mvc:View
    controllerName="nCode.webapp.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPage toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>appTitle}"/>
                </f:heading>
                <f:actions>
                    <Button icon="sap-icon://home" tooltip="Back to Launchpad" press=".onPressHome"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox class="sapUiSmallMargin">
                <SearchField placeholder="Search files..." search=".onSearch" liveChange=".onSearch" class="sapUiSmallMarginBottom"/>
                <List
                    id="fileList"
                    items="{files>/items}"
                    mode="SingleSelectMaster"
                    selectionChange=".onSelectionChange"
                    class="hypershimmyMasterList">
                    <ObjectListItem
                        title="{files>name}"
                        type="Active"
                        icon="{path: 'files>type', formatter: '.formatter.fileIcon'}"
                        intro="{files>type}">
                        <firstStatus>
                             <ObjectStatus text="{files>status}" state="{path: 'files>status', formatter: '.formatter.statusState'}"/>
                        </firstStatus>
                    </ObjectListItem>
                </List>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>