# SAP BTP HANA Cloud Connection
# Copy this file to .env and fill in your actual credentials
HANA_HOST=your-instance-id.hana.prod-us10.hanacloud.ondemand.com
HANA_PORT=443
HANA_DATABASE=SYSTEMDB
HANA_SCHEMA=NUCLEUS
HANA_USER=NUCLEUS_APP
HANA_PASSWORD=your_password_here
HANA_ENCRYPT=true

# Connection Pool Settings
HANA_POOL_MIN=2
HANA_POOL_MAX=10
HANA_CONNECTION_TIMEOUT_MS=10000
HANA_QUERY_TIMEOUT_MS=60000

# Server Configuration (optional - overrides config.json)
# SHIMMY_HOST=0.0.0.0
# SHIMMY_PORT=11434
# SHIMMY_MODEL_PATH=/path/to/models
# SHIMMY_API_KEY=your-api-key-here
