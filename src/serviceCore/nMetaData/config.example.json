{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "num_workers": 8,
    "max_connections": 1000,
    "request_timeout_ms": 30000,
    "shutdown_timeout_ms": 30000
  },
  "database": {
    "type": "postgres",
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "metadata",
      "user": "metadata_user",
      "password": "${DB_PASSWORD}",
      "pool_size": 20,
      "connect_timeout_ms": 5000,
      "query_timeout_ms": 30000,
      "idle_timeout_ms": 60000
    },
    "features": {
      "use_ssl": false,
      "enable_compression": false
    }
  },
  "auth": {
    "enabled": true,
    "api_key": "${API_KEY}",
    "rate_limit": {
      "requests_per_second": 100,
      "burst": 200
    }
  },
  "openai_integration": {
    "enabled": true,
    "server_url": "http://localhost:11434",
    "model": "qwen2-72b-instruct",
    "temperature": 0.0,
    "max_tokens": 2000,
    "timeout_ms": 30000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "stdout"
  },
  "metrics": {
    "enabled": true,
    "port": 9090,
    "path": "/metrics"
  },
  "tracing": {
    "enabled": false,
    "jaeger_endpoint": "http://localhost:14268/api/traces"
  }
}
