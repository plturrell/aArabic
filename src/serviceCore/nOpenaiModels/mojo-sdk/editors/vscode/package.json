{
  "name": "mojo-language-support",
  "displayName": "Mojo Language Support",
  "description": "Language support for Mojo with LSP features",
  "version": "0.1.0",
  "publisher": "mojo-lang",
  "license": "Apache-2.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "mojo",
    "language",
    "lsp",
    "syntax"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:mojo"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mojo",
        "aliases": [
          "Mojo",
          "mojo"
        ],
        "extensions": [
          ".mojo",
          ".ðŸ”¥"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-icon.svg",
          "dark": "./images/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mojo",
        "scopeName": "source.mojo",
        "path": "./syntaxes/mojo.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Monokai Mojo Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/monokai-mojo-dark.json"
      },
      {
        "label": "Mojo Light",
        "uiTheme": "vs",
        "path": "./themes/mojo-light.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Mojo Language Server",
      "properties": {
        "mojo.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Mojo LSP server"
        },
        "mojo.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to mojo-lsp executable (leave empty for auto-detection)"
        },
        "mojo.lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace LSP communication"
        },
        "mojo.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics"
        },
        "mojo.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable code completion"
        },
        "mojo.hover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover information"
        },
        "mojo.signatureHelp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable signature help"
        },
        "mojo.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable code formatting"
        }
      }
    },
    "commands": [
      {
        "command": "mojo.restartServer",
        "title": "Mojo: Restart Language Server",
        "icon": "$(refresh)"
      },
      {
        "command": "mojo.showOutputChannel",
        "title": "Mojo: Show Output Channel",
        "icon": "$(output)"
      },
      {
        "command": "mojo.buildProject",
        "title": "Mojo: Build Project",
        "icon": "$(tools)"
      },
      {
        "command": "mojo.runFile",
        "title": "Mojo: Run File",
        "icon": "$(play)"
      },
      {
        "command": "mojo.runTests",
        "title": "Mojo: Run Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "mojo.formatDocument",
        "title": "Mojo: Format Document",
        "icon": "$(symbol-color)"
      },
      {
        "command": "mojo.newMojoFile",
        "title": "Mojo: New Mojo File",
        "icon": "$(new-file)"
      }
    ],
    "keybindings": [
      {
        "command": "mojo.runFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == mojo"
      },
      {
        "command": "mojo.buildProject",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorLangId == mojo"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mojo.runFile",
          "when": "editorLangId == mojo",
          "group": "navigation@1"
        },
        {
          "command": "mojo.buildProject",
          "when": "editorLangId == mojo",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "mojo.buildProject",
          "when": "editorLangId == mojo"
        },
        {
          "command": "mojo.runFile",
          "when": "editorLangId == mojo"
        },
        {
          "command": "mojo.runTests"
        },
        {
          "command": "mojo.formatDocument",
          "when": "editorLangId == mojo"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mojo-lang/mojo-lsp"
  },
  "bugs": {
    "url": "https://github.com/mojo-lang/mojo-lsp/issues"
  }
}
