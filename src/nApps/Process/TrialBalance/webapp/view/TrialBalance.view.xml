<mvc:View
    controllerName="trialbalance.controller.TrialBalance"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    height="100%">
    
    <Page
        id="trialBalancePage"
        title="Trial Balance"
        showNavButton="false">
        
        <content>
            <VBox class="sapUiSmallMargin">
                <Title text="Trial Balance Overview" level="H2"/>
                <Text text="View and analyze your trial balance data" class="sapUiSmallMarginBottom"/>
                
                <!-- Sample content - will connect to backend later -->
                <Panel headerText="Account Summary" class="sapUiResponsiveMargin">
                    <content>
                        <VBox>
                            <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                                <Label text="Total Debits:" design="Bold"/>
                                <Text text="$0.00"/>
                            </HBox>
                            <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                                <Label text="Total Credits:" design="Bold"/>
                                <Text text="$0.00"/>
                            </HBox>
                            <HBox justifyContent="SpaceBetween">
                                <Label text="Balance:" design="Bold"/>
                                <Text text="$0.00"/>
                            </HBox>
                        </VBox>
                    </content>
                </Panel>
                
                <Button
                    text="Calculate Trial Balance"
                    type="Emphasized"
                    press=".onCalculate"
                    class="sapUiSmallMarginTop"/>
                    
                <Text
                    text="Ready to connect to backend API"
                    class="sapUiSmallMarginTop"/>
            </VBox>
        </content>
    </Page>
    
</mvc:View>