<mvc:View
    controllerName="trialbalance.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%">
    
    <Page
        id="homePage"
        showHeader="false">
        
        <content>
            <!-- SAP Fiori ShellBar -->
            <f:ShellBar
                id="shellBar"
                title="Trial Balance"
                showMenuButton="false"
                showSearch="true"
                showNotifications="true"
                notificationsNumber="3"
                search=".onSearch"
                notificationsPressed=".onNotificationsPress">
                <f:profile>
                    <Avatar
                        initials="TB"
                        displaySize="XS"
                        press=".onAvatarPress"/>
                </f:profile>
            </f:ShellBar>

            <!-- Launchpad Content -->
            <VBox class="sapUiSmallMargin">
                <Title text="My Home" level="H1" class="sapUiSmallMarginBottom"/>
                <Text text="Welcome to Trial Balance Application" class="sapUiSmallMarginBottom"/>
                
                <!-- Tile Grid -->
                <f:GridContainer class="sapUiSmallMarginTop">
                    <!-- Tile 1: Metadata -->
                            <GenericTile
                                header="Metadata"
                                subheader="ORD &amp; CSN"
                                press=".onNavigateToMetadata">
                                <TileContent>
                                    <ImageContent src="sap-icon://database" />
                                </TileContent>
                            </GenericTile>

                            <GenericTile
                                header="ODPS Catalog"
                                subheader="Data Products"
                                press=".onODPSCatalog">
                                <TileContent>
                                    <ImageContent src="sap-icon://product" />
                                </TileContent>
                            </GenericTile>

                            <GenericTile
                                header="Quality Dashboard"
                                subheader="ODPS v4.1"
                                press=".onQualityDashboard">
                                <TileContent>
                                    <NumericContent
                                        value="94.6"
                                        valueColor="Good"
                                        icon="sap-icon://quality-issue" />
                                </TileContent>
                            </GenericTile>

                            <GenericTile
                                header="Data Lineage"
                                subheader="Traceability"
                                press=".onLineageGraph">
                                <TileContent>
                                    <ImageContent src="sap-icon://chain-link" />
                                </TileContent>
                            </GenericTile>

                    <!-- Tile 5: YTD Analysis -->
                    <GenericTile
                        header="YTD Analysis"
                        subheader="Analytical List Page"
                        press=".onNavigateToYTD">
                        <TileContent>
                            <ImageContent src="sap-icon://line-chart"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Tile 6: Raw Data -->
                    <GenericTile
                        header="Raw Data Explorer"
                        subheader="Object Page"
                        press=".onNavigateToRawData">
                        <TileContent>
                            <ImageContent src="sap-icon://table-view"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Tile 7: BS Variance -->
                    <GenericTile
                        header="BS Variance"
                        subheader="Balance Sheet Analysis"
                        press=".onNavigateToBSVariance">
                        <TileContent>
                            <ImageContent src="sap-icon://compare"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Tile 8: Checklist -->
                    <GenericTile
                        header="Checklist Phase"
                        subheader="Process Tracking"
                        press=".onNavigateToChecklist">
                        <TileContent>
                            <ImageContent src="sap-icon://checklist"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Tile 9: Meta Data (duplicate, using same handler as Tile 1) -->
                    <GenericTile
                        header="Meta Data"
                        subheader="Configuration"
                        press=".onNavigateToMetadata">
                        <TileContent>
                            <ImageContent src="sap-icon://settings"/>
                        </TileContent>
                    </GenericTile>
                </f:GridContainer>
            </VBox>
        </content>
    </Page>
    
</mvc:View>